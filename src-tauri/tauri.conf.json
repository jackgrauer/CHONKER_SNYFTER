{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "cd ../frontend/chonker-modern && npm run dev",
    "beforeBuildCommand": "cd ../frontend/chonker-modern && npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../frontend/chonker-modern/dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "CHONKER",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.chonker.gui",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "üêπ CHONKER",
        "width": 1400,
        "height": 900
      }
    ]
  }
}
