{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CHONKER",
  "version": "2.0.0",
  "identifier": "com.chonker.gui",
  "build": {
    "frontendDist": "../frontend/chonker-modern/dist",
    "beforeDevCommand": "cd frontend/chonker-modern && npm run dev",
    "beforeBuildCommand": "cd frontend/chonker-modern && npm run build",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "üêπ CHONKER - Modern Terminal UI",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 1200,
        "minHeight": 800
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
